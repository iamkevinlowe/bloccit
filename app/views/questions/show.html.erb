<h1><%= @question.title %></h1>

<h4><%= @question.resolved ? "Question has been resolved." : "Still looking for an answer." %></h4>

<%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
<%= link_to "Delete?", @question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' if @question.resolved%>

<p><%= @question.body %></p>